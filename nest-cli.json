{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "outDir": "dist/src/"
      },
      {
        "include": "public/**/*",
        "outDir": "dist/"
      }
    ]
  }
}
